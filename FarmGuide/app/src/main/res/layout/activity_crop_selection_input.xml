<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CropSelectionInput">

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Address will appear here"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spnType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />


    <EditText
        android:id="@+id/etBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Budget"
        android:inputType="number" />


    <EditText
        android:id="@+id/etLandSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Size of land"
        android:inputType="number" />


    <EditText
        android:id="@+id/etpH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter pH of your soil"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbSprinkler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sprinkler" />

        <CheckBox
            android:id="@+id/cbDrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drip" />
    </LinearLayout>

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Do You Want to Proceed?" />

</LinearLayout>
